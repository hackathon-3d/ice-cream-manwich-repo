<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" 
    android:background="@drawable/cloud_bg">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/helloWorldView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

     <TableLayout
         android:id="@+id/dueDatesTableLayout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" >
         
     </TableLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >

        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            style="@style/dashboard_row_style">
        
                <Button
                    android:id="@+id/loanButton"
                    style="@style/dashboard_button_style"
                    android:drawableTop="@drawable/loan_icon"
                    android:onClick="onLoanButtonClick"
                    android:text="Loan" />

                <Button
                    android:id="@+id/borrowButton"
                    style="@style/dashboard_button_style"
                    android:drawableTop="@drawable/borrow_icon"
                    android:onClick="onBorrowButtonClick"
                    android:text="Borrow" />
        </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        style="@style/dashboard_row_style" >
	
		    <Button
		        android:id="@+id/historyButton"
	            style="@style/dashboard_button_style"
		        android:drawableTop="@drawable/history_icon"
		        android:onClick="onHistoryButtonClick"
		        android:text="History" />
	
		    <Button
		        android:id="@+id/libraryButton"
	            style="@style/dashboard_button_style"
		        android:drawableTop="@drawable/library_icon"
		        android:onClick="onLibraryButtonClick"
		        android:text="Library" />
	        </LinearLayout>

	</LinearLayout>

</LinearLayout>
</ScrollView>